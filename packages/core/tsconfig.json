{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
